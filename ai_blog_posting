<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI 블로그 포스팅 생성기</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- React & ReactDOM -->
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <!-- Babel for 라이브 브라우저 컴파일 -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Pretendard:wght@400;700;900&display=swap');
        body { font-family: 'Pretendard', sans-serif; }
        .animate-fade-in { animation: fadeIn 0.5s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        /* Custom scrollbar for editing area */
        textarea::-webkit-scrollbar { width: 8px; }
        textarea::-webkit-scrollbar-track { background: #f1f1f1; border-radius: 10px; }
        textarea::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
        textarea::-webkit-scrollbar-thumb:hover { background: #94a3b8; }
    </style>
</head>
<body class="bg-slate-50 text-slate-900">
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;

        // Lucide 아이콘을 React에서 사용하기 위한 래퍼 컴포넌트
        const Icon = ({ name, size = 24, className = "" }) => {
            useEffect(() => {
                if (window.lucide) {
                    window.lucide.createIcons();
                }
            }, [name]);
            return <i data-lucide={name} style={{ width: size, height: size }} className={className}></i>;
        };

        const CATEGORIES = [
            { id: 'map', name: '국내여행', icon: 'map', color: 'from-emerald-400 to-teal-500', light: 'bg-emerald-50', text: 'text-emerald-600', border: 'border-emerald-200' },
            { id: 'globe', name: '해외여행', icon: 'globe', color: 'from-blue-400 to-indigo-500', light: 'bg-blue-50', text: 'text-blue-600', border: 'border-blue-200' },
            { id: 'feather', name: '시', icon: 'feather', color: 'from-pink-400 to-rose-500', light: 'bg-pink-50', text: 'text-pink-600', border: 'border-pink-200' },
            { id: 'book-open', name: '독서', icon: 'book-open', color: 'from-amber-400 to-orange-500', light: 'bg-amber-50', text: 'text-amber-600', border: 'border-amber-200' },
            { id: 'music', name: '음악', icon: 'music', color: 'from-purple-400 to-purple-600', light: 'bg-purple-50', text: 'text-purple-600', border: 'border-purple-200' },
            { id: 'film', name: '영화', icon: 'film', color: 'from-red-400 to-red-600', light: 'bg-red-50', text: 'text-red-600', border: 'border-red-200' },
            { id: 'timer', name: '트라이애슬론', icon: 'timer', color: 'from-orange-400 to-red-500', light: 'bg-orange-50', text: 'text-orange-600', border: 'border-orange-200' },
            { id: 'footprints', name: '마라톤', icon: 'footprints', color: 'from-lime-400 to-green-500', light: 'bg-lime-50', text: 'text-lime-600', border: 'border-lime-200' },
            { id: 'bike', name: '자전거', icon: 'bike', color: 'from-sky-400 to-blue-500', light: 'bg-sky-50', text: 'text-sky-600', border: 'border-sky-200' },
            { id: 'waves', name: '수영', icon: 'waves', color: 'from-cyan-400 to-blue-500', light: 'bg-cyan-50', text: 'text-cyan-600', border: 'border-cyan-200' },
            { id: 'sword', name: '검도', icon: 'sword', color: 'from-slate-500 to-slate-700', light: 'bg-slate-50', text: 'text-slate-600', border: 'border-slate-200' },
            { id: 'mountain', name: '등산', icon: 'mountain', color: 'from-green-500 to-emerald-700', light: 'bg-green-50', text: 'text-green-600', border: 'border-green-200' },
            { id: 'brush', name: '서예', icon: 'brush', color: 'from-stone-400 to-stone-600', light: 'bg-stone-50', text: 'text-stone-600', border: 'border-stone-200' },
            { id: 'wind', name: '클라리넷', icon: 'wind', color: 'from-teal-400 to-emerald-500', light: 'bg-teal-50', text: 'text-teal-600', border: 'border-teal-200' },
            { id: 'drum', name: '드럼', icon: 'drum', color: 'from-zinc-600 to-black', light: 'bg-zinc-100', text: 'text-zinc-700', border: 'border-zinc-300' },
            { id: 'sparkles', name: '생성형AI', icon: 'sparkles', color: 'from-violet-400 to-fuchsia-600', light: 'bg-violet-50', text: 'text-violet-600', border: 'border-violet-200' },
            { id: 'bot', name: '피지컬AI', icon: 'bot', color: 'from-fuchsia-400 to-pink-600', light: 'bg-fuchsia-50', text: 'text-fuchsia-600', border: 'border-fuchsia-200' }
        ];

        const App = () => {
            const [view, setView] = useState('home');
            const [selectedCategories, setSelectedCategories] = useState([]);
            const [suggestedTopics, setSuggestedTopics] = useState([]);
            const [selectedTopic, setSelectedTopic] = useState(null);
            const [result, setResult] = useState('');
            const [coverImage, setCoverImage] = useState(null);
            const [isEditing, setIsEditing] = useState(false);
            const [loadingTopics, setLoadingTopics] = useState(false);
            const [loadingOutline, setLoadingOutline] = useState(false);
            const [error, setError] = useState(null);
            const [aiTone, setAiTone] = useState('전문적인');
            const [copyStatus, setCopyStatus] = useState(false);
            
            // API Key State
            const [apiKey, setApiKey] = useState('');
            const [showKey, setShowKey] = useState(false);

            const toggleCategory = (catName) => {
                setSelectedCategories(prev =>
                    prev.includes(catName) ? prev.filter(c => c !== catName) : [...prev, catName]
                );
                setSuggestedTopics([]);
                setSelectedTopic(null);
            };

            const callGeminiAPI = async (prompt, systemInstruction, useSearch = false) => {
                if (!apiKey) {
                    throw new Error('API 키가 설정되어 있지 않습니다. 설정에서 키를 입력해 주세요.');
                }
                
                let delay = 1000;
                for (let i = 0; i < 5; i++) {
                    try {
                        const payload = {
                            contents: [{ parts: [{ text: prompt }] }],
                            systemInstruction: { parts: [{ text: systemInstruction }] }
                        };
                        if (useSearch) { payload.tools = [{ "google_search": {} }]; }

                        const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });
                        
                        if (response.status === 401 || response.status === 403) {
                            throw new Error('유효하지 않은 API 키입니다. 키를 확인해 주세요.');
                        }
                        
                        if (!response.ok) {
                            const errorData = await response.json();
                            throw new Error(errorData.error?.message || 'API 호출 실패');
                        }
                        const data = await response.json();
                        return data.candidates?.[0]?.content?.parts?.[0]?.text;
                    } catch (err) {
                        if (err.message.includes('API 키')) throw err;
                        if (i === 4) throw err;
                        await new Promise(r => setTimeout(r, delay));
                        delay *= 2;
                    }
                }
            };

            const generateCoverImage = async (topic) => {
                try {
                    const imgPrompt = await callGeminiAPI(
                        `주제: "${topic}"\n이 블로그 주제를 대표하는 전문적인 인포그래픽 스타일의 대문 사진 영어 프롬프트를 1문장으로 작성해줘.`,
                        "이미지 생성 전문가로서 영어 프롬프트만 제공하세요."
                    );
                    const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/imagen-4.0-generate-001:predict?key=${apiKey}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            instances: { prompt: `A professional infographic cover image for a blog post about: ${imgPrompt}. Minimalist, high resolution.` },
                            parameters: { sampleCount: 1 }
                        })
                    });
                    if (!response.ok) return null;
                    const data = await response.json();
                    return `data:image/png;base64,${data.predictions[0].bytesBase64Encoded}`;
                } catch (err) { return null; }
            };

            const fetchTopics = async () => {
                if (!apiKey) {
                    setView('settings');
                    setError("API 키를 먼저 설정해 주세요.");
                    return;
                }
                if (selectedCategories.length === 0) {
                    setError("카테고리를 최소 1개 이상 선택해주세요.");
                    return;
                }
                setLoadingTopics(true);
                setError(null);
                const prompt = `카테고리: ${selectedCategories.join(', ')}. 이 주제들을 창의적으로 융합한 블로그 포스팅 제목 10개를 추천해줘.`;
                const system = "전문 블로거로서 클릭률이 높은 제목만 한 줄씩 출력하세요. 번호는 붙이지 마세요.";
                try {
                    const text = await callGeminiAPI(prompt, system);
                    const topics = text.split('\n')
                        .map(l => l.replace(/^\d+[\.\)\s]+/, '').trim())
                        .filter(l => l.length > 0)
                        .slice(0, 10);
                    setSuggestedTopics(topics);
                } catch (err) { 
                    setError(err.message); 
                } finally { 
                    setLoadingTopics(false); 
                }
            };

            const fetchOutline = async () => {
                if (!selectedTopic) return;
                setLoadingOutline(true);
                setError(null);
                const prompt = `제목: "${selectedTopic}". 이 제목으로 전문적인 블로그 포스팅을 작성해줘.`;
                const system = `당신은 전문 콘텐츠 작가입니다. 어조는 ${aiTone} 스타일로 작성하되, 모든 문장은 반드시 '~이다', '~한다'와 같은 평어체(문어체)로 작성하세요. 마크다운 기호를 사용하지 말고 소제목은 [ ] 기호로 구분하세요. 본문 하단에 '참고자료' 섹션을 포함하세요.`;
                try {
                    const [text, img] = await Promise.all([
                        callGeminiAPI(prompt, system, true),
                        generateCoverImage(selectedTopic)
                    ]);
                    setResult(text);
                    setCoverImage(img);
                    setView('result');
                } catch (err) { 
                    setError(err.message); 
                } finally { 
                    setLoadingOutline(false); 
                }
            };

            const copyToClipboard = () => {
                const textArea = document.createElement("textarea");
                textArea.value = result;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                setCopyStatus(true);
                setTimeout(() => setCopyStatus(false), 2000);
                document.body.removeChild(textArea);
            };

            const downloadAsText = () => {
                const blob = new Blob([result], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement("a");
                a.href = url;
                a.download = `${selectedTopic || 'blog_post'}.txt`;
                a.click();
                URL.revokeObjectURL(url);
            };

            return (
                <div className="min-h-screen py-12 px-4">
                    <div className="max-w-4xl mx-auto space-y-8">
                        {view === 'home' && (
                            <div className="bg-white rounded-[2.5rem] shadow-2xl p-10 border border-slate-100 animate-fade-in relative overflow-hidden">
                                <div className="absolute top-0 right-0 -mt-20 -mr-20 w-64 h-64 bg-blue-50 rounded-full blur-3xl opacity-50"></div>
                                <div className="text-center mb-12 relative z-10">
                                    <div className="inline-flex p-4 bg-gradient-to-tr from-blue-600 to-indigo-600 rounded-3xl mb-6 shadow-lg shadow-blue-100">
                                        <Icon name="pen-line" className="text-white" size={40} />
                                    </div>
                                    <h1 className="text-4xl font-extrabold text-slate-800 tracking-tight">AI 블로그 포스팅 생성기</h1>
                                    <p className="text-slate-500 mt-4 text-lg">관심 주제를 기발하게 융합하여 나만의 전문 칼럼을 완성하세요.</p>
                                </div>
                                
                                <div className="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-5 gap-4 mb-12 relative z-10">
                                    {CATEGORIES.map(cat => (
                                        <button 
                                            key={cat.id} 
                                            onClick={() => toggleCategory(cat.name)} 
                                            className={`group p-5 rounded-3xl border-2 transition-all flex flex-col items-center gap-3 active:scale-95 ${
                                                selectedCategories.includes(cat.name) 
                                                ? `bg-white ${cat.border} shadow-xl scale-105 border-opacity-100` 
                                                : 'bg-slate-50 border-transparent hover:bg-white hover:border-slate-200'
                                            }`}
                                        >
                                            <div className={`p-3 rounded-2xl transition-all ${selectedCategories.includes(cat.name) ? cat.light : 'bg-white shadow-sm'}`}>
                                                <Icon name={cat.icon} className={selectedCategories.includes(cat.name) ? cat.text : 'text-slate-400 group-hover:text-slate-600'} />
                                            </div>
                                            <span className={`text-sm font-bold ${selectedCategories.includes(cat.name) ? 'text-slate-800' : 'text-slate-500'}`}>{cat.name}</span>
                                        </button>
                                    ))}
                                </div>

                                <div className="flex flex-col sm:flex-row gap-4 max-w-lg mx-auto relative z-10">
                                    <button onClick={() => setView('settings')} className="flex-1 py-4 bg-slate-100 rounded-2xl font-bold flex items-center justify-center gap-2 hover:bg-slate-200 transition-colors">
                                        <Icon name="settings" size={20}/>설정
                                    </button>
                                    <button onClick={fetchTopics} disabled={loadingTopics} className="flex-[2] py-4 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-2xl font-bold flex items-center justify-center gap-2 shadow-xl shadow-blue-100 transition-all hover:opacity-90">
                                        {loadingTopics ? <Icon name="refresh-cw" className="animate-spin" size={20} /> : <Icon name="check" size={20} />}
                                        기획 시작하기
                                    </button>
                                </div>

                                {suggestedTopics.length > 0 && !loadingTopics && (
                                    <div className="mt-12 space-y-4 pt-10 border-t border-slate-100 relative z-10 animate-fade-in">
                                        <div className="flex items-center gap-2 mb-6">
                                            <Icon name="lightbulb" className="text-amber-500" />
                                            <h2 className="text-2xl font-bold text-slate-800">추천 주제 10가지</h2>
                                        </div>
                                        <div className="grid grid-cols-1 md:grid-cols-2 gap-3">
                                            {suggestedTopics.map((t, i) => (
                                                <div 
                                                    key={i} 
                                                    onClick={() => setSelectedTopic(t)} 
                                                    className={`p-5 rounded-2xl border-2 cursor-pointer transition-all flex items-center gap-4 ${
                                                        selectedTopic === t 
                                                        ? 'bg-blue-50 border-blue-400 shadow-md ring-4 ring-blue-50' 
                                                        : 'bg-slate-50 border-transparent hover:bg-white hover:border-slate-200'
                                                    }`}
                                                >
                                                    <div className={`w-8 h-8 rounded-full flex items-center justify-center text-xs font-black ${selectedTopic === t ? 'bg-blue-600 text-white' : 'bg-white text-slate-400'}`}>{i+1}</div>
                                                    <span className={`flex-grow font-bold ${selectedTopic === t ? 'text-blue-900' : 'text-slate-700'}`}>{t}</span>
                                                </div>
                                            ))}
                                        </div>
                                        <button 
                                            onClick={fetchOutline} 
                                            disabled={!selectedTopic || loadingOutline} 
                                            className={`w-full mt-10 py-5 rounded-2xl font-bold flex items-center justify-center gap-2 shadow-lg transition-all ${
                                                !selectedTopic || loadingOutline ? 'bg-slate-200 text-slate-400' : 'bg-slate-900 text-white hover:bg-black'
                                            }`}
                                        >
                                            {loadingOutline ? <Icon name="refresh-cw" className="animate-spin" size={22} /> : <Icon name="pen" size={22} />}
                                            본문 및 커버 생성
                                        </button>
                                    </div>
                                )}
                            </div>
                        )}

                        {view === 'result' && (
                            <div className="bg-white rounded-[2.5rem] shadow-2xl p-10 border border-slate-100 animate-fade-in">
                                <div className="flex justify-between mb-8 items-center border-b pb-6">
                                    <button onClick={() => setView('home')} className="flex items-center gap-2 font-bold text-slate-600 hover:text-blue-600 transition-colors">
                                        <Icon name="arrow-left" size={20}/> 주제 다시 고르기
                                    </button>
                                    <button onClick={() => setIsEditing(!isEditing)} className={`px-6 py-2 rounded-xl font-bold transition-all ${isEditing ? 'bg-blue-600 text-white shadow-md' : 'bg-slate-100 text-slate-600 hover:bg-slate-200'}`}>
                                        <Icon name={isEditing ? "check" : "edit-3"} size={18} className="inline mr-2" />
                                        {isEditing ? '편집 완료' : '내용 수정'}
                                    </button>
                                </div>
                                
                                <div className="space-y-8">
                                    {coverImage && !isEditing && (
                                        <div className="rounded-[2rem] overflow-hidden shadow-2xl border border-slate-100 bg-slate-50">
                                            <img src={coverImage} className="w-full h-auto object-cover max-h-[500px]" alt="Cover" />
                                            <div className="p-4 bg-white/80 text-center text-xs text-slate-400 font-medium">AI Generated Cover Image</div>
                                        </div>
                                    )}
                                    
                                    {isEditing ? (
                                        <textarea 
                                            className="w-full h-[600px] p-8 border-2 border-blue-100 rounded-3xl outline-none focus:ring-4 focus:ring-blue-50 text-slate-700 leading-relaxed font-mono text-base" 
                                            value={result} 
                                            onChange={e => setResult(e.target.value)} 
                                        />
                                    ) : (
                                        <div className="whitespace-pre-wrap text-lg leading-relaxed text-slate-700 font-sans px-2">
                                            {result}
                                        </div>
                                    )}
                                </div>

                                <div className="mt-12 flex flex-col sm:flex-row gap-4 border-t pt-10">
                                    <button onClick={() => setView('home')} className="flex-1 py-4 bg-slate-50 text-slate-600 rounded-2xl font-bold hover:bg-slate-100 transition-colors">처음으로</button>
                                    <button onClick={copyToClipboard} className="flex-1 py-4 bg-slate-100 rounded-2xl font-bold flex items-center justify-center gap-2 hover:bg-slate-200 transition-colors relative">
                                        {copyStatus ? <Icon name="check" className="text-green-500" size={20} /> : <Icon name="copy" size={20} />}
                                        {copyStatus ? '복사 완료' : '텍스트 복사'}
                                    </button>
                                    <button onClick={downloadAsText} className="flex-[1.5] py-4 bg-blue-600 text-white rounded-2xl font-bold flex items-center justify-center gap-2 hover:bg-blue-700 shadow-xl shadow-blue-100 transition-all">
                                        <Icon name="download" size={22} /> 포스팅 저장 (.txt)
                                    </button>
                                </div>
                            </div>
                        )}

                        {view === 'settings' && (
                            <div className="bg-white rounded-[2.5rem] shadow-2xl p-10 animate-fade-in max-w-xl mx-auto border border-slate-100">
                                <div className="flex items-center gap-4 mb-10">
                                    <button onClick={() => setView('home')} className="p-2 hover:bg-slate-100 rounded-full transition-colors"><Icon name="arrow-left" /></button>
                                    <h2 className="text-3xl font-black text-slate-800">설정</h2>
                                </div>
                                <div className="space-y-8">
                                    {/* Gemini API Key Input Section */}
                                    <div className="space-y-4">
                                        <div className="flex justify-between items-end">
                                            <label className="block font-bold text-slate-700 ml-1">Gemini API Key</label>
                                            <a href="https://aistudio.google.com/app/apikey" target="_blank" className="text-xs text-blue-500 hover:underline flex items-center gap-1">
                                                키 발급받기 <Icon name="external-link" size={12} />
                                            </a>
                                        </div>
                                        <div className="relative group">
                                            <div className="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                                <Icon name="key" size={18} className="text-slate-400 group-focus-within:text-blue-500 transition-colors" />
                                            </div>
                                            <input 
                                                type={showKey ? "text" : "password"}
                                                className="w-full pl-11 pr-12 py-4 bg-slate-50 border-2 border-slate-100 rounded-2xl outline-none focus:border-blue-400 focus:bg-white transition-all font-mono"
                                                placeholder="API 키를 입력하세요"
                                                value={apiKey}
                                                onChange={e => setApiKey(e.target.value)}
                                            />
                                            <button 
                                                onClick={() => setShowKey(!showKey)}
                                                className="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-400 hover:text-slate-600"
                                            >
                                                <Icon name={showKey ? "eye-off" : "eye"} size={18} />
                                            </button>
                                        </div>
                                        <p className="text-xs text-slate-400 leading-relaxed px-1">
                                            * 입력하신 API 키는 브라우저 세션 중에만 유지되며 외부에 저장되지 않습니다.
                                        </p>
                                    </div>

                                    <div className="space-y-4 pt-4 border-t border-slate-50">
                                        <label className="block font-bold text-slate-700 ml-1">포스팅 톤앤매너</label>
                                        <div className="grid grid-cols-3 gap-2">
                                            {['전문적인', '친근한', '정보성'].map(t => (
                                                <button 
                                                    key={t} 
                                                    onClick={() => setAiTone(t)} 
                                                    className={`py-4 rounded-2xl border-2 font-bold transition-all ${aiTone === t ? 'border-blue-600 bg-blue-600 text-white shadow-lg shadow-blue-100' : 'border-slate-100 bg-slate-50 text-slate-500 hover:border-slate-200'}`}
                                                >
                                                    {t}
                                                </button>
                                            ))}
                                        </div>
                                    </div>
                                    <div className="p-6 bg-blue-50 rounded-2xl flex gap-3">
                                        <Icon name="info" className="text-blue-600 flex-shrink-0" />
                                        <p className="text-sm text-blue-800 font-medium leading-relaxed">
                                            API 키를 입력해야 서비스 이용이 가능합니다. 키를 입력한 후 '설정 저장' 버튼을 눌러주세요.
                                        </p>
                                    </div>
                                </div>
                                <button 
                                    onClick={() => {
                                        if(!apiKey) {
                                            setError("서비스를 시작하려면 API 키를 입력해야 합니다.");
                                        } else {
                                            setError(null);
                                            setView('home');
                                        }
                                    }} 
                                    className="w-full mt-12 py-5 bg-slate-900 text-white rounded-2xl font-bold text-lg hover:bg-black transition-all shadow-xl active:scale-95"
                                >
                                    설정 저장
                                </button>
                            </div>
                        )}
                    </div>
                    
                    {/* Error Toast */}
                    {error && (
                        <div className="fixed bottom-6 right-6 p-5 bg-white border-l-8 border-red-500 shadow-2xl rounded-2xl animate-fade-in z-50 max-w-sm">
                            <div className="flex items-start gap-3">
                                <div className="bg-red-100 p-2 rounded-full text-red-600 mt-0.5">
                                    <Icon name="alert-circle" size={16} />
                                </div>
                                <div>
                                    <p className="text-sm font-bold text-slate-800">오류가 발생했습니다</p>
                                    <p className="text-xs text-slate-500 mt-1">{error}</p>
                                </div>
                                <button onClick={() => setError(null)} className="text-slate-300 hover:text-slate-500 ml-2">
                                    <Icon name="x" size={14} />
                                </button>
                            </div>
                        </div>
                    )}
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
